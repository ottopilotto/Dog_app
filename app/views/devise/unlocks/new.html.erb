<div class="registration-form">
  <div class="form-logo"><%=image_tag 'dog_logo.png', class: 'logo-image'%></div>
  <div class="form-header">Resend unlock instructions</div>
  <div class="form-body">
    <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true, class: 'form-field' %></div>

      <div><%= f.submit "Resend unlock instructions", class: 'fomr-button' %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

